# ðŸš€ Production Environment Configuration for Chatter Backend
# Copy this content to your .env file when deploying to production

# Application Configuration
APP_NAME="Chatter"
APP_ENV=production
APP_KEY=base64:YOUR_32_CHARACTER_SECRET_KEY
APP_DEBUG=false
APP_URL=https://your-backend-domain.com

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (Update with your production database)
DB_CONNECTION=mysql
DB_HOST=your-production-db-host.com
DB_PORT=3306
DB_DATABASE=chatter_production
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# Broadcasting Configuration
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DRIVER=s3
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration (for caching and sessions)
REDIS_HOST=your-redis-host.com
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# Email Configuration (for notifications and verification)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=chatter-production-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Alternative: DigitalOcean Spaces Configuration
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=chatter-storage

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_key
PUSHER_APP_SECRET=your_pusher_secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_TTL=60

# Firebase Configuration (for push notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_firebase_sender_id

# Social Login Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URL="${APP_URL}/auth/facebook/callback"

APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# Payment Gateway Configuration (for premium features)
STRIPE_KEY=your_stripe_publishable_key
STRIPE_SECRET=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# AdMob Configuration
ADMOB_APP_ID=your_admob_app_id
ADMOB_BANNER_ID=your_banner_ad_unit_id
ADMOB_INTERSTITIAL_ID=your_interstitial_ad_unit_id
ADMOB_REWARDED_ID=your_rewarded_ad_unit_id

# Agora Configuration (for audio/video calls)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# Error Tracking Configuration
SENTRY_LARAVEL_DSN=your_sentry_dsn
SENTRY_TRACES_SAMPLE_RATE=1.0

# Security Configuration
SESSION_SECURE_COOKIE=true
SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com
SESSION_SAME_SITE=none

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_VIDEO_SIZE=104857600  # 100MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,mov,avi,mkv

# Content Moderation
ENABLE_CONTENT_MODERATION=true
PROFANITY_FILTER=true
AUTO_MODERATE_POSTS=true

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your_ga_measurement_id
MIXPANEL_TOKEN=your_mixpanel_token

# Backup Configuration
BACKUP_DISK=s3
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# CDN Configuration
CDN_URL=https://your-cdn-domain.com
ENABLE_CDN=true

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_PREFIX=api

# App Store Configuration
PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.yourcompany.chatter
APP_STORE_URL=https://apps.apple.com/app/chatter/id123456789

# Support Configuration
SUPPORT_EMAIL=support@your-domain.com
HELP_URL=https://help.your-domain.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_ADS=true
ENABLE_ANALYTICS=true

# Performance Configuration
CACHE_TTL=3600  # 1 hour
SESSION_TTL=7200  # 2 hours
IMAGE_CACHE_TTL=86400  # 24 hours

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please check back soon!"

# SSL Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
