# Chatter Social Media App - Environment Configuration Template
# Copy this file to .env.production for production deployment
# Copy this file to .env.staging for staging deployment

# =====================================
# APPLICATION SETTINGS
# =====================================
APP_NAME="Chatter Social Media"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_WILL_BE_GENERATED_BY_SETUP_SCRIPT
APP_DEBUG=false
APP_URL=https://your-domain.com

# =====================================
# LOGGING CONFIGURATION
# =====================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =====================================
# DATABASE CONFIGURATION
# =====================================
# For SQLite (Recommended for small to medium deployments)
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# For MySQL (Alternative for large deployments)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=chatter_production
# DB_USERNAME=chatter_user
# DB_PASSWORD=secure_password_here

# =====================================
# CACHE & SESSION CONFIGURATION
# =====================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# =====================================
# API CONFIGURATION
# =====================================
# IMPORTANT: Change this from the default in production!
API_KEY=CHANGE_THIS_IN_PRODUCTION_TO_SECURE_RANDOM_STRING

# =====================================
# AWS S3 CONFIGURATION (Optional)
# =====================================
# Uncomment and configure if using AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your-chatter-bucket-name
# AWS_USE_PATH_STYLE_ENDPOINT=false

# =====================================
# FIREBASE CONFIGURATION (Optional)
# =====================================
# Required for push notifications
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# =====================================
# AGORA CONFIGURATION (Optional)
# =====================================
# Required for voice/video calling features
# AGORA_APP_ID=your_agora_app_id
# AGORA_APP_CERT=your_agora_app_certificate

# =====================================
# EMAIL CONFIGURATION (Optional)
# =====================================
# Configure for email notifications
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=your_email_username
# MAIL_PASSWORD=your_email_password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=noreply@your-domain.com
# MAIL_FROM_NAME="${APP_NAME}"

# =====================================
# SOCIAL LOGIN CONFIGURATION (Optional)
# =====================================
# Google OAuth
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple Sign In
# APPLE_CLIENT_ID=your_apple_client_id
# APPLE_CLIENT_SECRET=your_apple_client_secret

# =====================================
# ANALYTICS & MONITORING (Optional)
# =====================================
# Google Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXX-X

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =====================================
# RATE LIMITING & SECURITY
# =====================================
# Rate limiting per minute for API calls
API_RATE_LIMIT=60

# Content moderation settings
CONTENT_MODERATION_ENABLED=true

# =====================================
# DIGITAL OCEAN SPACES (Alternative to AWS S3)
# =====================================
# DO_ACCESS_KEY_ID=your_do_access_key
# DO_SECRET_ACCESS_KEY=your_do_secret_key
# DO_DEFAULT_REGION=nyc3
# DO_BUCKET=your-do-bucket
# DO_ENDPOINT=https://nyc3.digitaloceanspaces.com

# =====================================
# ADDITIONAL SECURITY SETTINGS
# =====================================
# CORS settings for API
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOWED_HEADERS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Session security
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# =====================================
# PERFORMANCE SETTINGS
# =====================================
# Image optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85

# Video settings
VIDEO_MAX_SIZE_MB=100
VIDEO_MAX_DURATION_SECONDS=60

# =====================================
# DEVELOPMENT SETTINGS (Disable in Production)
# =====================================
# Set to false in production
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# =====================================
# BACKUP CONFIGURATION (Recommended)
# =====================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =====================================
# NOTES FOR PRODUCTION DEPLOYMENT
# =====================================
# 1. Generate a new APP_KEY with: php artisan key:generate
# 2. Change the API_KEY to a secure random string
# 3. Set APP_DEBUG=false
# 4. Configure your domain in APP_URL
# 5. Set up proper database credentials
# 6. Configure external services (AWS, Firebase, Agora) as needed
# 7. Set up SSL certificates
# 8. Configure firewall and security groups
# 9. Set up monitoring and alerting
# 10. Configure regular backups